@model IEnumerable<Aakriti_MVC.Models.Student>

    <h2>Student List</h2>
    <a class="btn btn-primary mb-3" asp-action="Create">Create New</a>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Age</th>
                <th>Enrollment Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
    {
            <tr>
                <td>@item.FullName</td>
                <td>@item.Age</td>
                <td>@item.EnrollmentDate.ToShortDateString()</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
